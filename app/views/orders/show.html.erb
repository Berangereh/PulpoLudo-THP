<div class="section section-lg bg-soft">
  <div class="container">
    <div class="row pt-5 pt-md-0">

      <!-- Profile menu with recurring paths -->
      <div class="col-12 col-md-4 d-none d-lg-block">
        <%= render 'shared/menu_profil' %>
      </div>

      <!-- Current_order status -->
      <div class="col-12 col-lg-8">
        <div class="row">
          <div class="col-12 col-sm">
            <div class="card border-light">
              <div class="card-body d-block d-md-flex align-items-center">
                <% if !current_user.already_subscribed? %>
                  <div class="text-center my-1">
                    <%= image_tag "cta/subscription_banner.jpg", class: "my-2 rounded", style: "max-height:300px" %>
                    <h4 class="my-2 font-weight-normal">Tu n'ai pas encore abonné :</h4>
                    <%= active_link_to "M'abonner", user_subscriptions_path(current_user), class: "btn btn-primary my-2" %>
                  </div>
                <%elsif current_order.status == "finished"%>
                  <div class="icon icon-shape icon-md icon-shape-primary rounded-circle mr-3 mb-4 mb-md-0">
                    <span class="fas fa-puzzle-piece"></span>
                  </div>
                    <span class="d-block h3 font-weight-normal">
                      Vous pouvez commander 5 nouveau jeux
                    </span>
                  </div>
                  <%= active_link_to "Louer de nouveaux jeux", root_pah, class: "btn btn-primary my-2" %>
                <% elsif current_order.status == "waiting_to_be_send" || current_order.status == "in_transit_send" %>
                  <div class="icon icon-shape icon-md icon-shape-primary rounded-circle mr-3 mb-4 mb-md-0">
                    <span class="fas fa-puzzle-piece"></span>
                  </div>
                    <span class="d-block h3 font-weight-normal">
                      En chemain vers chez vous
                    </span>
                  </div>
                <% elsif current_order.status == "arrived"%>
                  <div class="icon icon-shape icon-md icon-shape-primary rounded-circle mr-3 mb-4 mb-md-0">
                    <span class="fas fa-puzzle-piece"></span>
                  </div>
                    <span class="d-block h3 font-weight-normal">
                      Commande bien livré
                    </span>
                  </div>
                  <%= render 'my_games', games: current_order.games %>
                <% elsif current_order.status == "waiting_to_be_back" || current_order.status == "in_transit_back" %>
                  <div class="icon icon-shape icon-md icon-shape-primary rounded-circle mr-3 mb-4 mb-md-0">
                    <span class="fas fa-puzzle-piece"></span>
                  </div>
                    <span class="d-block h3 font-weight-normal">
                      En chemain vers nos entrepos
                    </span>
                  </div>
                <% else %>
                  <div class="icon icon-shape icon-md icon-shape-primary rounded-circle mr-3 mb-4 mb-md-0">
                    <span class="fas fa-puzzle-piece"></span>
                  </div>
                    <span class="d-block h3 font-weight-normal">
                      Nous avons un problème avec votre commande, contacter le service clients (sc@pulpoludo.com)
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>