<main>
        <!-- Section -->
        <section class="min-vh-100 d-flex align-items-center section-image overlay-soft-dark py-5 py-lg-0">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="text-center text-md-center mb-5 mt-md-0 text-white">
                            <h1 class="mb-0 h3">S'inscrire</h1>
                        </div>
                    </div>
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="signin-inner mt-3 mt-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">

                            <!-- central white card -->

                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3"}) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>
                            
                            <div class="form-group">
                                <label for="email">Email</label>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <span class="fas fa-envelope">
                                            </span>
                                        </span>
                                    </div>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :html => {:class => "form-control"}%>
                                </div>
                            </div>
                            <!-- End of Form -->
                            <div class="form-group">
                                <!-- Form -->
                                <div class="form-group">
                                <label for="password">Mot de passe</label>
                                    <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> lettres minimum)</em>
                                    <% end %>
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <span class="fas fa-unlock-alt">
                                                </span>
                                            </span>
                                        </div>
                                        
                                        <br />
                                        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", :html => {:class => "form-control"} %>
                                    </div>
                                </div>
                                <!-- End of Form -->
                                <!-- Form -->
                                <div class="form-group">
                                    <label for="password_confirm">Confirmer le mot de passe</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><span class="fas fa-unlock-alt"></span></span>
                                        </div>

                                        <br />
                                        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", :html => {:class => "form-control"} %>
                                    </div>
                                </div>   
                            </div>

                        <div class="actions mb-4">
                            <%= f.submit "Inscription", class: "btn btn-lg btn-primary btn-block" %>
                        </div>

                        <% end %>

                        <div class="form-group">
                            Vous avez déjà un compte ?
                            <%= render "devise/shared/links" %>
                        </div>

                            <!-- end central white card -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>