<div class="text-center my-5">
  <%= button_to "Payer un abonnement (CHECKOUT)", checkout_create_path(price: 10), class: "btn btn-primary", remote: true %>
</div>

<h1> Voici la liste de tes abonnements </h1>

<% @subscriptions.each_with_index do |subscription, index| %>

  <h3>Abonnement n°<%= index + 1%> :</h3>
  
  <ul>
    <li><%= subscription.price %></li>
    <li><%= subscription.start_date %></li>
    <li><%= subscription.duration %></li>
  </ul>

  <div class="d-flex justify-content-around">
    <%= link_to "Modifier cette adresse", edit_user_subscription_path(current_user, subscription), :class => "btn btn-outline-success mx-4" %>
    <%= link_to "Supprimer cette adresse", user_subscription_path(current_user, subscription), :method => "delete", :class => "btn btn-outline-danger mx-4", :data => {:confirm => "Est-ce que vous êtes sûr de votre choix ?"} %>
  </div>

<% end %>

