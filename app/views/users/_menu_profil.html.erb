



<!-- Navigation -->
       <div class="card border-light p-2">

        <div class="card-body p-2">
            <div class="profile-thumbnail small-thumbnail mx-auto">
                <%if current_user.avatar.attached?%>
                  <%= image_tag @user.avatar, alt: 'real avatar', class: "card-img-top rounded-circle border-white", alt: "photo-de-profil" %>
                <%else%>
                  <%= image_tag 'unnamed.jpg', alt: 'default avatar', class: "card-img-top rounded-circle border-white", alt: "photo-de-profil" %>
                <% end %>
            </div>
            <h2 class="h5 font-weight-normal text-center mt-3 mb-0"><%= current_user.first_name %> <%= current_user.last_name %> </h2>
            <div class="list-group dashboard-menu list-group-sm mt-4">
                
                <div class="d-flex list-group-item">
                    <%= link_to "Mes jeux", user_path(current_user), class: "list-group-item-action active" %><span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span>
                  </div>         
                

                <div class="d-flex list-group-item">
                    <%= link_to "Mon profil", edit_user_path(current_user), class: "  list-group-item-action" %><span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span>
                </div>
                
                

                <div class="d-flex list-group-item">
                    <%= link_to "Mes informations", edit_user_registration_path(current_user), class: "list-group-item-action" %><span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span>
                </div>
          
                <div class="d-flex list-group-item">
                    <%= link_to "Mes adresses", user_addresses_path(current_user, current_user.addresses.last), class: "list-group-item-action" %><span class="fas fa-chevron-right"></span></span>
                </div>

                <a href="./security.html" class="d-flex list-group-item list-group-item-action ">Gérer mon abonnement<span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span> </a>
                
                <a href="./billing.html" class="d-flex list-group-item list-group-item-action ">Mes retours<span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span> </a>
                

                <div class="link_logout">
                  <%= link_to destroy_user_session_path, method: :delete, class:"d-flex list-group-item list-group-item-action  border-0", style:"height: 32px"  do %>
                    
                    <span>Se déconnecter</span>
                    <span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span>
                  <% end %>
                </div>
            
            <!-- Quand écran réduit-->
             <div class="col-12 d-lg-none">
                <div class="card bg-white border-light mb-4 mb-lg-5">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-10 d-flex">
                                <a href="user_path(current_user)" class="list-group-item list-group-item-action border-0  active ">Général</a>
                                <a href="./settings.html" class="list-group-item list-group-item-action border-0 ">Settings</a>
                                <a href="./my-items.html" class="list-group-item list-group-item-action d-none d-sm-block border-0 ">My Items</a>
                                <a href="./security.html" class="list-group-item list-group-item-action d-none d-md-block border-0 ">Security</a>
                            </div>
                            <div class="col-2 d-flex justify-content-center">
                                <div class="btn-group dropleft">
                                    <button class="btn btn-link dropdown-toggle dropdown-toggle-split mr-2 m-0 p-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="icon icon-sm">
                                            <span class="fas fa-ellipsis-h icon-secondary fa-lg"></span>
                                        </span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a href="./my-items.html" class="list-group-item list-group-item-action d-sm-none border-0 ">My Items</a>
                                        <a href="./security.html" class="list-group-item list-group-item-action d-md-none border-0 ">Security</a>
                                        <a href="./billing.html" class="list-group-item list-group-item-action border-0 ">Billing</a>
                                        <a href="./messages.html" class="list-group-item list-group-item-action border-0 ">Messages</a> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                    
        </div>
    </div>
</div>
            
      
