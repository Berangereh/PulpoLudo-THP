<%= form_for [:admin, item] do |f| %>

  <div class="card-body">
    <div class="form-group">
      <%= f.label "Genre", class: "mb-2" %>
      <%= f.select :gender, ['', 'Femme', 'Homme', 'Autre'], {}, class: 'form-control' %>
    </div>
                    
    <div class="form-group">
      <%= f.label "Prénom", class: "mb-2" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Nom de famille", class: "mb-2" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Date de naissance", class: "mb-2" %>
      <%= f.date_field :date_of_birth, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Numéro de téléphone", class: "mb-2" %>
      <%= f.text_field :phone_number, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label "Stripe_id", class: "mb-2" %>
      <%= f.text_field :stripe_id, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label "Admin ?", class: "mb-2" %>
      <%= f.check_box :is_admin?, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :add_avatar, "Optionnel - Ajouter une photo de profil", class: "mb-2 font-italic" %>
      <%= f.file_field :avatar, class: "form-control overflow-hidden" %>
    </div>
  </div>

  <div class="card-footer">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>

<% end %>